<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/app_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="14 蓝牙" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="13 通知栏" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_nearbywifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="13 附近WIFI" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_photochoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="照片选择/13 14 适配" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clipboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="13 剪切板" />

        <com.hjq.demo.widget.WaveAnimationView
            android:id="@+id/waveView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:isDoubleWave="false"
            app:waveAmplitude="10dp"
            app:waveColor="@color/blue"
            app:waveSpeed="10"
            app:waveWavelength="96dp" />

        <com.hjq.demo.widget.MultiWaveAnimationView
            android:id="@+id/multiWaveView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="1dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>